        }

        .gallery {
            display: flex;
            overflow: hidden;
            width: 100%;
        }

        .gallery-img {
            min-width: 100%;
            transition: transform 1s ease; /* Added transition for smooth sliding */
        }

        .prev, .next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0,0,0,0.5);
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 50%;
        }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }
    </style>
